<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:background="@drawable/border_text_message_view"
        android:backgroundTint="@color/blue"
        android:maxWidth="@dimen/max_weight_message_text"
        android:padding="@dimen/padding_text"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/v_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_base"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_bottom_view_message"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_react"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_react_button"
        android:layout_marginEnd="@dimen/margin_bottom_default"
        android:layout_marginBottom="@dimen/margin_bottom_default"
        android:background="@drawable/border_text_message_view"
        android:backgroundTint="@color/gray_light"
        android:drawablePadding="@dimen/margin_bottom_default"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_default"
        android:text="@string/_0"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_react"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ic_baseline_favorite_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>